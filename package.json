{
  "name": "zcl-packet",
  "version": "0.2.5-1",
  "description": "zcl-packet is a framer and parser for ZigBee Cluster Library (ZCL) packet on node.js.",
  "main": "dist/index.js",
  "files": [
    "/dist"
  ],
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "mocha -r ts-node/register",
    "prepare": "tsc",
    "convert": "ts-node --transpile-only src/definitions/convert.ts && prettier --write src/definitions/*.json",
    "prettier": "prettier 'src/**' --check",
    "prettier:fix": "prettier 'src/**' --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zigbeer/zcl-packet.git"
  },
  "keywords": [
    "zcl",
    "zigbee"
  ],
  "author": "Jack Wu <jackchased@gmail.com>",
  "contributors": [
    {
      "name": "Hedy Wang",
      "email": "hedywings@gmail.com"
    },
    {
      "name": "Simen Li",
      "email": "simenkid@gmail.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zigbeer/zcl-packet/issues"
  },
  "homepage": "https://github.com/zigbeer/zcl-packet#readme",
  "dependencies": {
    "concentrate": "^0.2.3",
    "dissolve-chunks": "^1.3.0",
    "enum": "^2.5.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "busyman": "^0.3.0",
    "chai": "^3.5.0",
    "chance": "^1.0.4",
    "jest": "^24.0.0",
    "mocha": "^2.5.3",
    "prettier": "^1.16.1",
    "ts-node": "^8.0.2",
    "typescript": "^3.2.4",
    "zcl-id": "^0.5.0-6"
  }
}
